{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with Clang",
            "type": "shell",
            "command": "g++",
            "args": [
              "'${file}'",
              "-o",
              "'${fileBasenameNoExtension}.out'",
              "--debug"
            ],
            "group": {
              "kind": "build",
              "isDefault": true
            }
          }
    ]
}